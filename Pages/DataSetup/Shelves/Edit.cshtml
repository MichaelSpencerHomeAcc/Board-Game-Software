@page "{id:long}"
@model Board_Game_Software.Pages.DataSetup.Shelves.EditModel
@{
    ViewData["Title"] = "Edit Shelf";
}

<style>
    .edit-card {
        max-width: 800px;
        margin: 0 auto;
    }

    .img-lockdown {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        background-color: var(--bs-tertiary-bg);
        border: 2px solid white;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .avatar-text {
        color: white;
        font-weight: 600;
        font-size: 1.5rem;
        text-shadow: 0 1px 2px rgba(0,0,0,0.2);
    }
</style>

<div class="container-fluid py-4">
    @* --- Header --- *@
    <div class="edit-card mb-4">
        <div class="d-flex align-items-center gap-3">
            <div class="img-lockdown" style="background-color: @Model.GetAvatarColor(Model.Shelf.ShelfName);">
                <span class="avatar-text">@Model.GetInitials(Model.Shelf.ShelfName)</span>
            </div>
            <div>
                <h1 class="h3 mb-1 text-body">Edit Shelf</h1>
                <p class="text-muted mb-0">Updating configuration for <strong>@Model.Shelf.ShelfName</strong></p>
            </div>
        </div>
    </div>

    @* --- Form --- *@
    <div class="card edit-card shadow-sm border-0">
        <div class="card-body p-4 p-md-5">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Shelf.Id" />
                <input type="hidden" asp-for="Shelf.Gid" />

                <div class="row mb-4">
                    <label asp-for="Shelf.ShelfName" class="col-sm-3 col-form-label fw-bold text-secondary text-sm-end">Shelf Name</label>
                    <div class="col-sm-9">
                        <input asp-for="Shelf.ShelfName" class="form-control form-control-lg border-2" placeholder="e.g. Kallax 1" />
                        <span asp-validation-for="Shelf.ShelfName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row mb-5">
                    <label class="col-sm-3 col-form-label fw-bold text-secondary text-sm-end">Shelf Status</label>
                    <div class="col-sm-9 d-flex align-items-center">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="Shelf.Inactive" id="inactiveSwitch">
                            <label class="form-check-label ms-2 text-body" for="inactiveSwitch">
                                Mark as Inactive (Hidden from browsing)
                            </label>
                        </div>
                    </div>
                </div>

                <hr class="my-4 opacity-10">

                <div class="row">
                    <div class="col-sm-9 offset-sm-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-5 shadow-sm">
                            <i class="bi bi-check-lg me-2"></i>Save Changes
                        </button>
                        <a asp-page="./Details" asp-route-id="@Model.Shelf.Id" class="btn btn-outline-secondary px-4">
                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
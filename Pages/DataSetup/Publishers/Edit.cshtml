@page "{id:long}"
@model Board_Game_Software.Pages.DataSetup.Publishers.EditModel
@{
    ViewData["Title"] = "Edit Publisher";
}

<h1>Edit Publisher</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Publisher.PublisherName" class="form-label"></label>
        <input asp-for="Publisher.PublisherName" class="form-control" />
        <span asp-validation-for="Publisher.PublisherName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Publisher.Description" class="form-label"></label>
        <textarea asp-for="Publisher.Description" class="form-control"></textarea>
        <span asp-validation-for="Publisher.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model Board_Game_Software.Pages.DataSetup.BoardGameMarkerTypes.DetailsModel
@{
    ViewData["Title"] = "Marker Type Details";
}

<h1>Marker Type Details</h1>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.MarkerType.TypeDesc</dd>

            <dt class="col-sm-3">Alignment Type</dt>
            <dd class="col-sm-9">@(Model.MarkerType.FkBgdMarkerAlignmentTypeNavigation?.TypeDesc ?? "N/A")</dd>

            <dt class="col-sm-3">Additional Typing</dt>
            <dd class="col-sm-9">@(Model.MarkerType.FkBgdMarkerAdditionalTypeNavigation?.TypeDesc ?? "N/A")</dd>
        </dl>

        <p>
            <a asp-page="Edit" asp-route-id="@Model.MarkerType.Id" class="btn btn-primary">Edit</a>
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        </p>
    </div>

    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.MarkerImageBase64))
        {
            <img src="@Model.MarkerImageBase64" alt="Marker Image" class="img-fluid rounded" />
        }
        else
        {
            <p><em>No image available.</em></p>
        }
        </div>
    </div>
</div>

<div style="
    position: fixed;
    bottom: 10px;
    left: 0;
    width: 100vw;
    max-height: 300px;
    background-color: white;
    border-top: 1px solid #ccc;
    padding: 0.5rem 1rem;
    overflow-x: auto;
    overflow-y: hidden;
    z-index: 1050;
">
    <h3 style="font-size: 1.2rem; margin-bottom: 0.5rem;">Board Games Using this Marker</h3>
    <div style="white-space: nowrap;">
        @foreach (var (game, img) in Model.RelatedBoardGamesWithImages)
        {
            <div style="display: inline-block; vertical-align: top; width: 130px; margin-right: 0.75rem;">
                <div class="card h-100" style="height: 220px; display: flex; flex-direction: column;">
                    @if (!string.IsNullOrEmpty(img))
                    {
                        <img src="@img" class="card-img-top" alt="@game.BoardGameName" style="width: 100%; height: 140px; object-fit: cover;" />
                    }
                    else
                    {
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="140"
                             xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder"
                             preserveAspectRatio="xMidYMid slice" focusable="false">
                            <title>No image</title>
                            <rect width="100%" height="100%" fill="#868e96"></rect>
                            <text x="50%" y="50%" fill="#dee2e6" dy=".3em" text-anchor="middle">No image</text>
                        </svg>
                    }
                    <div class="card-body d-flex flex-column justify-content-between" style="flex-grow: 1; padding: 0.5rem;">
                        <h5 class="card-title" style="
                                font-size: clamp(0.7rem, 1vw, 1rem);
                                line-height: 1.1;
                                margin-bottom: 0.5rem;
                                overflow: hidden;
                                text-overflow: ellipsis;
                                padding-bottom: 0.25rem;
                                display: -webkit-box;
                                -webkit-line-clamp: 2;
                                -webkit-box-orient: vertical;
                            ">
                            @game.BoardGameName
                        </h5>
                        <a asp-page="/Browsing/BoardGames/BoardGameDetails" asp-route-id="@game.Id" class="btn btn-sm btn-outline-primary mt-auto" style="font-size: 0.75rem; padding: 0.25rem 0.5rem;">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .board-game-card {
        max-width: 140px;
        height: 180px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .board-game-card img {
            max-height: 100px;
            object-fit: contain;
        }

        .board-game-card .card-body {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 0.5rem;
            font-size: 0.85rem;
        }

    .board-games-scroll-container {
        padding-bottom: 10px;
        margin-bottom: 10px;
        overflow-x: auto;
        white-space: nowrap;
    }

        .board-games-scroll-container > .row {
            padding-right: 20px;
        }
</style>

@page
@model Board_Game_Software.Pages.DataSetup.Shelves.AddModel
@{
    ViewData["Title"] = "Create New Shelf";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            @* --- Error Trapping Alert --- *@
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger shadow-sm border-start border-4 border-danger mb-4">
                    <div class="d-flex">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>
                            <h6 class="fw-bold mb-1">Creation Failed</h6>
                            <div asp-validation-summary="All" class="small"></div>
                        </div>
                    </div>
                </div>
            }

            <div class="card shadow-sm border-0 p-4">
                <div class="d-flex align-items-center mb-4">
                    <div class="bg-primary text-white rounded-3 p-3 me-3">
                        <i class="bi bi-plus-square h3 mb-0"></i>
                    </div>
                    <div>
                        <h1 class="h4 fw-bold mb-0">New Shelf</h1>
                        <p class="text-muted small mb-0">Define the physical unit and its first section.</p>
                    </div>
                </div>

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Shelf.ShelfName" class="form-label fw-bold small text-uppercase text-muted">Shelf Name</label>
                        <input asp-for="Shelf.ShelfName" class="form-control" placeholder="e.g. Living Room Main" required />
                        <span asp-validation-for="Shelf.ShelfName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Shelf.TotalRows" class="form-label fw-bold small text-uppercase text-muted">Initial Rows</label>
                        <input asp-for="Shelf.TotalRows" class="form-control" type="number" min="1" required />
                        <small class="text-muted">An initial "A1" section will be created automatically.</small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4 pt-3 border-top">
                        <a asp-page="./Index" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4 shadow-sm">
                            <i class="bi bi-check-lg me-1"></i> Create Shelf
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
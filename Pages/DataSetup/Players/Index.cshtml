@page
@model Board_Game_Software.Pages.DataSetup.Players.IndexModel
@using Board_Game_Software.Models
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

<h1>Manage Players</h1>

<p>
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-page="Add" class="btn btn-primary">Add New Player</a>
    }
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.Players)
        {
            <tr>
                <td>@($"{player.FullName}")</td>
                <td>@player.DateOfBirth?.ToString("yyyy-MM-dd")</td> 
                <td>
                    <a asp-page="Details" asp-route-id="@player.Id">Details</a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var currentUserId = UserManager.GetUserId(User);
                        var isAdmin = User.IsInRole("Admin");
                        var isOwner = player.FKdboAspNetUsers == currentUserId;

                        @if (isAdmin)
                        {
                            <text>
                                | <a asp-page="Edit" asp-route-id="@player.Id">Edit</a> |
                                <form method="post" asp-page-handler="Delete" asp-route-id="@player.Id" style="display:inline"
                                      onsubmit="return confirm('Are you sure you want to delete this player? This action cannot be undone.');">
                                    <button type="submit" class="btn btn-link p-0 m-0 align-baseline">Delete</button>
                                </form>
                            </text>
                        }

                        else if (isOwner)
                        {
                            <text> | <a asp-page="Edit" asp-route-id="@player.Id">Edit</a></text>
                        }
                        else
                        {
                            <text> | <span class="text-muted" title="You do not have permission to edit or delete this player">Edit</span></text>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

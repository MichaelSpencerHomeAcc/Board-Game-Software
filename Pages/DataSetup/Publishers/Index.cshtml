@page
@model Board_Game_Software.Pages.DataSetup.Publishers.IndexModel
@{
    ViewData["Title"] = "Publishers";
}

<div class="row">
    <div class="col-12">
        <h1 class="text-body mb-4">Publishers</h1>

        @if (Model.ShowDeleteError)
        {
            <div class="alert alert-warning border-warning shadow-sm" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                This publisher is linked to @Model.DeleteLinkedCount @((Model.DeleteLinkedCount == 1) ? "game" : "games"), it cannot be deleted.
            </div>
        }

        <div class="mb-3">
            <a asp-page="Add" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Add New Publisher
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th class="text-body-emphasis" style="width: 30%;">Publisher Name</th>
                        <th class="text-body-emphasis">Description</th>
                        <th class="text-end text-body-emphasis" style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Publishers)
                    {
                        var hasImage = Model.PublisherLogosBase64.ContainsKey(item.Id);
                        var imgSrc = hasImage ? Model.PublisherLogosBase64[item.Id] : "";

                        <tr>
                            <td>
                                @* Flex container with 'align-items-center' ensures the icon and text sit on the same line *@
                                <div class="d-flex align-items-center">
                                    <div class="me-3 d-flex align-items-center justify-content-center bg-body-secondary rounded shadow-sm"
                                         style="width: 36px; height: 36px; min-width: 36px; overflow: hidden; border: 1px solid var(--bs-border-color);">
                                        @if (hasImage)
                                        {
                                            <img src="@imgSrc" style="width: 100%; height: 100%; object-fit: contain;" alt="" />
                                        }
                                        else
                                        {
                                            <i class="bi bi-building text-secondary"></i>
                                        }
                                    </div>

                                    <a asp-page="Details" asp-route-id="@item.Id"
                                       class="publisher-link fw-bold text-decoration-none"
                                       data-hover-img="@imgSrc">
                                        @item.PublisherName
                                    </a>
                                </div>
                            </td>
                            <td>
                                <span class="text-body-secondary text-truncate d-inline-block" style="max-width: 500px;">
                                    @(item.Description ?? "N/A")
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group shadow-sm">
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edit Publisher">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this publisher?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" style="border-top-left-radius: 0; border-bottom-left-radius: 0;" title="Delete Publisher">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Theme-aware Tooltip *@
<div id="publisherImageTooltip" style="display: none; position: absolute; z-index: 9999; pointer-events: none;">
    <div class="card shadow-lg border-secondary">
        <div class="card-body p-1 bg-body rounded">
            <img id="tooltipImage" src="" alt="Preview"
                 style="max-width: 250px; max-height: 250px; display: block; border-radius: 4px; object-fit: contain;">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const tooltip = document.getElementById('publisherImageTooltip');
            const tooltipImg = document.getElementById('tooltipImage');

            if (!tooltip || !tooltipImg) return;

            document.querySelectorAll('.publisher-link').forEach(link => {
                link.addEventListener('mouseenter', (e) => {
                    const currentSrc = e.currentTarget.getAttribute('data-hover-img');
                    if (currentSrc && currentSrc.trim() !== "") {
                        tooltipImg.src = currentSrc;
                        tooltip.style.display = 'block';
                    }
                });

                link.addEventListener('mousemove', (e) => {
                    // Offset tooltip so it doesn't flicker under the cursor
                    tooltip.style.top = (e.pageY + 15) + 'px';
                    tooltip.style.left = (e.pageX + 15) + 'px';
                });

                link.addEventListener('mouseleave', () => {
                    tooltip.style.display = 'none';
                    tooltipImg.src = "";
                });
            });
        });
    </script>
}
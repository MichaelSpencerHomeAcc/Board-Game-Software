@page
@model Board_Game_Software.Pages.DataSetup.BoardGameMarkerTypes.AddModel
@{
    ViewData["Title"] = "Add Board Game Marker Type";
}

<h1>Add Board Game Marker Type</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="MarkerType.TypeDesc">Name</label>
        <input asp-for="MarkerType.TypeDesc" class="form-control" />
        <span asp-validation-for="MarkerType.TypeDesc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MarkerType.FkBgdMarkerAlignmentType">Alignment Type</label>
        <select asp-for="MarkerType.FkBgdMarkerAlignmentType" asp-items="Model.AlignmentTypes" class="form-control">
            <option value="">-- Select Alignment --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Add Marker Type</button>
    <a asp-page="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model Board_Game_Software.Pages.DataSetup.Publishers.AddModel
@{
    ViewData["Title"] = "Add Publisher";
}

<h1>Add Publisher</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Publisher.PublisherName" class="form-label">Name</label>
        <input asp-for="Publisher.PublisherName" class="form-control" />
        <span asp-validation-for="Publisher.PublisherName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Publisher.Description" class="form-label"></label>
        <textarea asp-for="Publisher.Description" class="form-control"></textarea>
        <span asp-validation-for="Publisher.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

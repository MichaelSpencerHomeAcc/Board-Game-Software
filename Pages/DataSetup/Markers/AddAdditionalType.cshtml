@page
@model Board_Game_Software.Pages.DataSetup.BoardGameMarkerTypes.AddAdditionalTypeModel
@{
    ViewData["Title"] = "Manage Additional Types";
}

<div class="container-fluid">
    <div class="d-flex align-items-center mb-4">
        <a asp-page="./Index" class="btn btn-outline-secondary me-3 shadow-sm">
            <i class="bi bi-arrow-left"></i>
        </a>
        <h1 class="text-body m-0">Additional Marker Types</h1>
    </div>

    @if (Model.Message != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 bg-body-tertiary">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4 fw-bold">Add New Category</h5>
                    <form method="post" novalidate>
                        <div class="mb-4">
                            <label asp-for="TypeDesc" class="form-label fw-semibold">Type Name</label>
                            <input asp-for="TypeDesc" class="form-control shadow-sm p-2" placeholder="e.g. Rare, Expansion, Promo..." />
                            <span asp-validation-for="TypeDesc" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary shadow">
                                <i class="bi bi-plus-lg me-1"></i> Save Additional Type
                            </button>
                            <a asp-page="./Index" class="btn btn-link text-secondary text-decoration-none">Back to Markers</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-bold mb-0">Existing Types</h5>
                    <p class="text-muted small">Current labels available for marker classification.</p>
                </div>
                <div class="card-body px-4">
                    @if (Model.ExistingTypes?.Any() == true)
                    {
                        <div class="list-group list-group-flush rounded border overflow-auto" style="max-height: 400px;">
                            @foreach (var type in Model.ExistingTypes)
                            {
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <span class="text-body-emphasis">@type</span>
                                    <i class="bi bi-tag text-secondary opacity-25"></i>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-collection text-secondary opacity-25" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-2">No additional types found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-dismiss alert after 4 seconds
        setTimeout(function() {
            let alert = document.querySelector('.alert');
            if (alert) {
                let bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }
        }, 4000);
    </script>
}
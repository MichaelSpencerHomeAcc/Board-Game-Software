@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var isSignedIn = SignInManager.IsSignedIn(User);
    bool isAdmin = false;
    if (isSignedIn)
    {
        var user = await UserManager.GetUserAsync(User);
        isAdmin = user != null && await UserManager.IsInRoleAsync(user, "Admin");
    }
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Board Game Manager</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script>
        // Theme Management Script
        const setTheme = (theme) => {
            document.documentElement.setAttribute('data-bs-theme', theme);
            localStorage.setItem('theme', theme);
        };

        const storedTheme = localStorage.getItem('theme') || 'light';
        setTheme(storedTheme);

        window.addEventListener('DOMContentLoaded', () => {
            const toggle = document.getElementById('themeToggle');
            if (localStorage.getItem('theme') === 'dark') {
                toggle.checked = true;
            }

            toggle.addEventListener('change', () => {
                const newTheme = toggle.checked ? 'dark' : 'light';
                setTheme(newTheme);
            });
        });
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm border-bottom shadow-sm mb-3 bg-body">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-page="/Index">
                    <i class="bi bi-dice-5-fill me-2"></i>Board Game Manager
                </a>

                <div class="d-flex align-items-center">
                    <div class="form-check form-switch me-3">
                        <i class="bi bi-sun-fill text-warning me-1"></i>
                        <input class="form-check-input" type="checkbox" id="themeToggle" style="cursor: pointer; width: 3em; height: 1.5em;">
                        <i class="bi bi-moon-stars-fill text-primary ms-1"></i>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            @* Sidebar Navigation *@
            <div class="col-md-2 bg-body-tertiary border-end" style="min-height: 100vh;">
                <div class="p-3">
                    <h6 class="text-uppercase text-body-secondary fw-bold small mb-3 pt-2">Navigation</h6>
                    <ul class="nav nav-pills flex-column mb-4">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Home page" ? "active" : "link-body-emphasis")" asp-page="/Index">
                                <i class="bi bi-house-door me-2"></i> Home
                            </a>
                        </li>
                    </ul>

                    @if (isSignedIn)
                    {
                        <h6 class="text-uppercase text-body-secondary fw-bold small mb-3">Data Setup</h6>
                        <ul class="nav nav-pills flex-column mb-4">
                            <li><a class="nav-link link-body-emphasis" asp-page="/DataSetup/Players/Index"><i class="bi bi-people me-2"></i> Players</a></li>
                            @if (isAdmin)
                            {
                                <li><a class="nav-link link-body-emphasis" asp-page="/DataSetup/Markers/Index"><i class="bi bi-tag me-2"></i> Markers</a></li>
                                <li><a class="nav-link link-body-emphasis" asp-page="/DataSetup/Publishers/Index"><i class="bi bi-building me-2"></i> Publishers</a></li>
                                <li><a class="nav-link link-body-emphasis" asp-page="/DataSetup/Shelves/Index"><i class="bi bi-bookshelf me-2"></i> Shelves</a></li>
                            }
                        </ul>
                    }

                    <h6 class="text-uppercase text-body-secondary fw-bold small mb-3">Browsing</h6>
                    <ul class="nav nav-pills flex-column mb-4">
                        <li><a class="nav-link link-body-emphasis" asp-page="/Browsing/BoardGames/Index"><i class="bi bi-dice-5 me-2"></i> Board Games</a></li>
                        <li><a class="nav-link link-body-emphasis" asp-page="/GameNight/Index"><i class="bi bi-calendar-check me-2"></i> Game Nights</a></li>
                    </ul>

                    @if (isAdmin)
                    {
                        <h6 class="text-uppercase text-danger-emphasis fw-bold small mb-3">Admin</h6>
                        <ul class="nav nav-pills flex-column">
                            <li><a class="nav-link link-body-emphasis" asp-page="/Admin/ManageUsers/Index"><i class="bi bi-gear me-2"></i> Manage Users</a></li>
                        </ul>
                    }
                </div>
            </div>

            @* Main Content Area *@
            <div class="col-md-10">
                <main role="main" class="pb-3 px-4 mt-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @* --- GLOBAL PREVIEW TOOLTIP --- *@
    <div id="markerImageTooltip">
        <img id="tooltipImage" src="" alt="Preview" />
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Board_Game_Software</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Board_Game_Software.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Board_Game_Software</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 bg-light border-end" style="min-height: 100vh;">
                <h5 class="mt-3 ms-3">Navigation</h5>
                <ul class="nav flex-column ms-3">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Privacy">Privacy</a>
                    </li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var currentUser = await UserManager.GetUserAsync(User);
                        if (await UserManager.IsInRoleAsync(currentUser, "Admin"))
                        {
                            <li class="nav-item mt-3">
                                <strong>Data Setup</strong>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/DataSetup/Players/Index">Players</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/DataSetup/Shelves/Index">Shelves</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/DataSetup/Markers/Index">Markers</a>
                            </li>
                        }
                    }

                    <li class="nav-item mt-3">
                        <strong>Browsing</strong>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Browsing/BoardGames/Index">Board Games</a>
                    </li>
                    <li class="nav-item mt-3">
                        <strong>Game Night</strong>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="#">Coming Soon</a>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var currentUser = await UserManager.GetUserAsync(User);
                        if (await UserManager.IsInRoleAsync(currentUser, "Admin"))
                        {
                            <li class="nav-item mt-3">
                                <strong>Admin Functions</strong>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Admin/ManageUsers/Index">Manage Users</a>
                            </li>
                        }
                    }
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 pt-3">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - Board_Game_Software - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

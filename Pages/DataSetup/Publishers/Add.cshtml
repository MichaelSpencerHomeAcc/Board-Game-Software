@page
@model Board_Game_Software.Pages.DataSetup.Publishers.AddModel
@{
    ViewData["Title"] = "Add Publisher";
}

<div class="container-fluid">
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a asp-page="Index" class="text-decoration-none">Publishers</a></li>
                <li class="breadcrumb-item active">New Publisher</li>
            </ol>
        </nav>
        <h1 class="text-body">Add New Publisher</h1>
        <p class="text-muted">Register a new board game publishing house in the system.</p>
    </div>

    <div class="row">
        <div class="col-xl-6 col-lg-8">
            <div class="card shadow-sm border-0 bg-body-tertiary">
                <div class="card-body p-4">
                    @* Added enctype for file upload support *@
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Publisher.PublisherName" class="form-label fw-bold small text-uppercase text-muted">Publisher Name</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white border-end-0"><i class="bi bi-building"></i></span>
                                <input asp-for="Publisher.PublisherName" class="form-control border-start-0" placeholder="e.g. Stonemaier Games" />
                            </div>
                            <span asp-validation-for="Publisher.PublisherName" class="text-danger small"></span>
                        </div>

                        @* New Image Upload Field *@
                        <div class="form-group mb-3">
                            <label asp-for="ImageUpload" class="form-label fw-bold small text-uppercase text-muted">Publisher Logo</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white border-end-0"><i class="bi bi-image"></i></span>
                                <input asp-for="ImageUpload" type="file" id="imageInput" class="form-control border-start-0" accept="image/*" />
                            </div>

                            @* Image Preview Container *@
                            <div id="previewContainer" class="mt-3 d-none">
                                <p class="small text-muted mb-1 text-uppercase fw-bold" style="font-size: 0.7rem;">Logo Preview:</p>
                                <img id="imagePreview" src="#" alt="Preview" class="img-thumbnail shadow-sm" style="max-height: 150px;" />
                            </div>

                            <div class="form-text small text-muted">Upload a brand logo (Optional).</div>
                            <span asp-validation-for="ImageUpload" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Publisher.Description" class="form-label fw-bold small text-uppercase text-muted">Description</label>
                            <textarea asp-for="Publisher.Description" class="form-control shadow-sm" rows="5" placeholder="Enter a brief history or focus of this publisher..."></textarea>
                            <span asp-validation-for="Publisher.Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <button type="submit" class="btn btn-primary px-4 shadow-sm">
                                <i class="bi bi-plus-circle me-1"></i> Create Publisher
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary px-4">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-4 d-none d-lg-block">
            <div class="h-100 d-flex flex-column justify-content-center px-4 text-center opacity-75">
                <i class="bi bi-building-up mb-3" style="font-size: 4rem; color: var(--bs-secondary-bg);"></i>
                <h5 class="text-muted">New Partner</h5>
                <p class="small text-muted">Adding a publisher allows you to link specific board games to their creators, helping users filter games by their favorite brands.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Logic to handle the image preview before upload
        document.getElementById('imageInput').onchange = function (evt) {
            const [file] = this.files;
            const preview = document.getElementById('imagePreview');
            const container = document.getElementById('previewContainer');

            if (file) {
                preview.src = URL.createObjectURL(file);
                container.classList.remove('d-none');
            } else {
                container.classList.add('d-none');
            }
        };
    </script>
}
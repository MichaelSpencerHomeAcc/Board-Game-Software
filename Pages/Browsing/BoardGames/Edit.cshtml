@page
@model Board_Game_Software.Pages.Admin.BoardGames.EditModel
@{
    ViewData["Title"] = "Edit Board Game";
}

<style>
    /* Restoration of the Pill Layout */
    .marker-pills-container {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        background: #1e2125;
        padding: 15px;
        border-radius: 8px;
        border: 1px solid #343a40;
        min-height: 100px;
    }

    .marker-pill {
        display: inline-flex;
        align-items: center;
        background: #ffffff;
        color: #000;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        border: 1px solid #dee2e6;
    }

    .btn-remove-pill {
        background: none;
        border: none;
        color: #6c757d;
        margin-left: 8px;
        padding: 0;
        font-size: 1.1rem;
        line-height: 1;
        cursor: pointer;
    }

        .btn-remove-pill:hover {
            color: #dc3545;
        }

    /* Bulk Modal Tile Styles */
    .bulk-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 12px;
        max-height: 400px;
        overflow-y: auto;
        padding: 10px;
    }

    .bulk-tile {
        cursor: pointer;
        border: 2px solid #343a40;
        border-radius: 8px;
        background: #212529;
        padding: 8px;
        text-align: center;
        transition: 0.2s;
    }

        .bulk-tile:hover {
            border-color: #495057;
        }

        .bulk-tile.selected {
            border-color: #0d6efd;
            background: #0d6efd20;
        }

    .tile-img {
        height: 60px;
        object-fit: contain;
        margin-bottom: 5px;
        max-width: 100%;
    }

    .tile-text {
        font-size: 0.75rem;
        color: #fff;
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<div class="container-fluid py-4">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="BoardGame.Id" />
        <input type="hidden" asp-for="BoardGame.Gid" />

        <div class="row">
            <div class="col-lg-8">
                <div class="card bg-dark text-white border-secondary mb-4">
                    <div class="card-header border-secondary"><h5>Core Details</h5></div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label text-muted small uppercase">Game Name</label>
                            <input asp-for="BoardGame.BoardGameName" class="form-control bg-dark text-white border-secondary" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small">Publisher</label>
                                <select asp-for="BoardGame.FkBgdPublisher" asp-items="Model.Publishers" class="form-select bg-dark text-white border-secondary">
                                    <option value="">-- Select Publisher --</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small">Game Type</label>
                                <select asp-for="BoardGame.FkBgdBoardGameType" asp-items="Model.BoardGameTypes" class="form-select bg-dark text-white border-secondary">
                                    <option value="">-- Select Type --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-check form-switch mb-4 mt-2">
                            <input class="form-check-input" type="checkbox" asp-for="BoardGame.HasMarkers" id="markerSwitch">
                            <label class="form-check-label" for="markerSwitch">Includes Markers/Components?</label>
                        </div>

                        <div id="markerUI" style="display: @(Model.BoardGame.HasMarkers ? "block" : "none")">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label class="form-label text-muted small mb-0">Game Components</label>
                                <button type="button" class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#bulkModal">
                                    + Add Multiple Components
                                </button>
                            </div>
                            <div class="marker-pills-container" id="pillBox">
                                @foreach (var m in Model.ExistingMarkers)
                                {
                                    <div class="marker-pill">
                                        @m.FkBgdBoardGameMarkerTypeNavigation?.TypeDesc
                                        <input type="hidden" name="MarkerTypeIds" value="@m.FkBgdBoardGameMarkerType" />
                                        <button type="button" class="btn-remove-pill" onclick="this.parentElement.remove()">&times;</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card bg-dark text-white border-secondary mb-4">
                    <div class="card-header border-secondary"><h5>Visuals</h5></div>
                    <div class="card-body text-center">
                        <div class="mb-3 border border-secondary rounded p-2 bg-black" style="min-height: 250px; display: flex; align-items: center; justify-content: center;">
                            <img id="imgPrev" src="@(Model.CurrentImageUrl ?? "/images/no-thumb.png")" class="img-fluid" style="max-height: 300px;" />
                        </div>
                        <input type="file" asp-for="ImageUpload" class="form-control form-control-sm bg-dark text-white border-secondary" onchange="preview(this)" />
                    </div>
                </div>
                <button type="submit" class="btn btn-success w-100 py-3 mb-2">Save Changes</button>
                <a asp-page="./BoardGameDetails" asp-route-id="@Model.BoardGame.Id" class="btn btn-outline-secondary w-100">Cancel</a>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="bulkModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content bg-dark text-white border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Bulk Add Components</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="modalSearch" class="form-control bg-dark text-white border-secondary mb-3" placeholder="Filter list..." onkeyup="filterBulk()">
                <div class="bulk-container">
                    @foreach (var mt in Model.AvailableMarkerTypes)
                    {
                        <div class="bulk-tile" onclick="toggleTile(this)" data-id="@mt.Id" data-name="@mt.TypeDesc">
                            @if (!string.IsNullOrEmpty(mt.ImageBase64))
                            {
                                <img src="@mt.ImageBase64" class="tile-img" />
                            }
                            else
                            {
                                <div class="tile-img d-flex align-items-center justify-content-center text-muted"><i class="bi bi-box"></i></div>
                            }
                            <span class="tile-text">@mt.TypeDesc</span>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-primary w-100" onclick="commitBulk()" data-bs-dismiss="modal">Add Selected</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle UI Section
        document.getElementById('markerSwitch').addEventListener('change', function() {
            document.getElementById('markerUI').style.display = this.checked ? 'block' : 'none';
        });

        // Image Preview
        function preview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = e => document.getElementById('imgPrev').src = e.target.result;
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Bulk Modal Logic
        function toggleTile(el) { el.classList.toggle('selected'); }

        function filterBulk() {
            let val = document.getElementById('modalSearch').value.toLowerCase();
            document.querySelectorAll('.bulk-tile').forEach(t => {
                t.style.display = t.dataset.name.toLowerCase().includes(val) ? "block" : "none";
            });
        }

        function commitBulk() {
            const container = document.getElementById('pillBox');
            document.querySelectorAll('.bulk-tile.selected').forEach(t => {
                const id = t.dataset.id;
                const name = t.dataset.name;

                const pill = document.createElement('div');
                pill.className = 'marker-pill';
                pill.innerHTML = `${name} <input type="hidden" name="MarkerTypeIds" value="${id}" />
                                  <button type="button" class="btn-remove-pill" onclick="this.parentElement.remove()">&times;</button>`;
                container.appendChild(pill);

                t.classList.remove('selected');
                t.style.display = 'none'; // Prevent adding twice
            });
        }
    </script>
}
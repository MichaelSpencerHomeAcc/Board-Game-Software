@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
    .stat-box {
        background: rgba(var(--bs-tertiary-bg-rgb), 0.5);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.2s ease-in-out;
        text-decoration: none;
        display: block;
    }

        .stat-box:hover {
            background: rgba(var(--bs-primary-rgb), 0.1);
            border-color: var(--bs-primary);
            transform: translateY(-3px);
        }
</style>

<div class="container py-4">
    @* --- Hero Section --- *@
    <div class="p-5 mb-5 bg-body-tertiary rounded-4 shadow-sm border border-secondary-subtle">
        <h1 class="display-5 fw-bold">Board Game Tracker</h1>
        <p class="col-md-8 fs-4 text-muted">Manage your collection, track your players, and record every epic game night victory.</p>
        <a asp-page="/GameNight/Create" class="btn btn-primary btn-lg px-4 shadow">Start a Game Night</a>
    </div>

    @* --- Real Data Stats Boxes --- *@
    <div class="row g-4">
        <div class="col-md-4">
            <a asp-page="/Browsing/BoardGames/Index" class="stat-box h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3">
                        <i class="bi bi-controller fs-3 text-primary"></i>
                    </div>
                    <h5 class="m-0 fw-bold text-body">Library</h5>
                </div>
                <div class="display-6 fw-bold text-body">@Model.TotalGames</div>
                <p class="text-muted mb-0">Total Board Games</p>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-page="/DataSetup/Players/Index" class="stat-box h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-success bg-opacity-10 p-2 rounded-3 me-3">
                        <i class="bi bi-people fs-3 text-success"></i>
                    </div>
                    <h5 class="m-0 fw-bold text-body">Players</h5>
                </div>
                <div class="display-6 fw-bold text-body">@Model.TotalPlayers</div>
                <p class="text-muted mb-0">Registered Competitors</p>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-page="/GameNight/Index" class="stat-box h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-info bg-opacity-10 p-2 rounded-3 me-3">
                        <i class="bi bi-calendar-event fs-3 text-info"></i>
                    </div>
                    <h5 class="m-0 fw-bold text-body">History</h5>
                </div>
                <div class="display-6 fw-bold text-body">@Model.TotalGameNights</div>
                <p class="text-muted mb-0">Game Nights Recorded</p>
            </a>
        </div>
    </div>
</div>
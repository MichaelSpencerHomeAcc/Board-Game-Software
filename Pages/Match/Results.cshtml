@page "{id:long}"
@model Board_Game_Software.Pages.Match.ResultsModel
@using Board_Game_Software.Models
@{
    ViewData["Title"] = "Record Results";
    var isLocked = Model.MatchComplete == true;
}

<style>
    .game-banner-header {
        height: 220px;
        position: relative;
        overflow: hidden;
        border-radius: 20px;
        background: #1a1d20;
    }

    .banner-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.4) blur(1px);
    }

    .banner-content {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 2.5rem;
    }

    .shelf-flash-card {
        background: linear-gradient(135deg, #16222a, #3a6073);
        border: 2px solid #0dcaf0;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }

    .shelf-location-text {
        font-size: 2.25rem;
        font-weight: 900;
        color: #0dcaf0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .player-card {
        background: var(--bs-body-tertiary);
        border: 1px solid var(--bs-border-color);
        border-radius: 15px;
        transition: all 0.2s;
        position: relative;
    }

        .player-card:hover {
            border-color: var(--bs-primary);
        }

    .player-avatar-circle {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid var(--bs-primary);
    }

    .marker-overlay {
        width: 24px;
        height: 24px;
        position: absolute;
        bottom: -2px;
        right: -2px;
        background: #1a1d20;
        border: 1px solid #3d4246;
        border-radius: 4px;
        padding: 2px;
        object-fit: contain;
    }

    .score-input {
        font-size: 1.5rem;
        font-weight: 800;
        text-align: center;
        color: var(--bs-primary);
    }

    .winner-checkbox:checked + .winner-btn {
        background: #ffc107;
        border-color: #ffc107;
        color: #000;
        box-shadow: 0 0 15px rgba(255,193,7,0.4);
    }

    .winner-btn {
        border-radius: 50px;
        font-weight: bold;
        transition: all 0.3s;
    }

    .player-card.border-warning {
        border-color: #ffc107 !important;
        border-width: 2px;
    }

    .locked-badge {
        position: absolute;
        top: 15px;
        right: 20px;
        background: #dc3545;
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: bold;
        z-index: 5;
    }

    .banner-title-link {
        text-decoration: none;
        color: white;
        display: inline-block;
        transition: opacity 0.2s;
    }

        .banner-title-link:hover {
            opacity: 0.8;
            color: #0dcaf0;
        }
</style>

<div class="container py-4" style="max-width: 960px;">

    @* FLASH PROMPT: Shows only once after Completion *@
    @if (TempData["FlashShelfLocation"] != null)
    {
        <div class="shelf-flash-card mb-5 text-center">
            <div class="d-flex align-items-center justify-content-center gap-3 mb-2">
                <i class="bi bi-info-circle-fill text-info fs-4"></i>
                <h5 class="text-white fw-bold mb-0">Match Recorded. Return game to:</h5>
            </div>
            <div class="shelf-location-text">
                <i class="bi bi-bookshelf me-2"></i> @TempData["FlashShelfLocation"]
            </div>
            <p class="text-white-50 small mb-0 mt-2">This prompt will disappear when you leave the page.</p>
        </div>
    }

    @if (isLocked)
    {
        <div class="alert alert-danger rounded-4 shadow-sm mb-4 d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <i class="bi bi-lock-fill fs-4 me-3"></i>
                <div>
                    <strong>Match Locked!</strong> This match has been completed and editing is disabled.
                </div>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <form method="post" asp-page-handler="Unlock">
                    <input type="hidden" asp-for="Input.MatchId" />
                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                        <i class="bi bi-unlock-fill me-1"></i> Unlock Match
                    </button>
                </form>
            }
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Input.MatchId" />
        <input type="hidden" asp-for="Input.NightId" />

        <div class="game-banner-header mb-5 shadow-lg">
            <img src="@(Model.GameBannerUrl ?? "/images/default-banner.png")" class="banner-img" />
            <div class="banner-content">
                @if (isLocked)
                {
                    <div class="locked-badge"><i class="bi bi-lock-fill"></i> LOCKED</div>
                }
                <span class="badge bg-primary align-self-start mb-2 rounded-pill px-3">RECORD RESULTS</span>

                @* Game Title with New Tab Link *@
                <a href="/Browsing/BoardGames/BoardGameDetails/@Model.MatchGameId" target="_blank" class="banner-title-link">
                    <h1 class="display-5 fw-bold mb-1">
                        @Model.MatchGameName <i class="bi bi-box-arrow-up-right fs-5 ms-2 opacity-50"></i>
                    </h1>
                </a>

                <p class="text-white-50 mb-0">@Model.MatchDate?.ToString("dddd, MMMM dd, yyyy")</p>
                <div class="mt-3 bg-dark bg-opacity-50 p-2 rounded-4 d-inline-flex align-items-center" style="max-width: fit-content;">
                    <label class="text-white small fw-bold text-uppercase mx-3 opacity-75">Finish Time</label>
                    <input asp-for="Input.FinishedDate" type="datetime-local" class="form-control form-control-sm border-0 bg-transparent text-white fw-bold" disabled="@(isLocked ? "disabled" : null)" />
                </div>
            </div>
        </div>

        <div class="row g-3">
            @for (var i = 0; i < Model.Input.PlayerResults.Count; i++)
            {
                var pr = Model.Input.PlayerResults[i];
                var player = Model.Players.First(p => p.MatchPlayerId == pr.MatchPlayerId);

                <div class="col-12">
                    <div class="player-card p-3 shadow-sm border-start border-4 @(pr.IsWinner ? "border-warning" : "border-secondary") @(isLocked ? "opacity-75" : "")">
                        <input type="hidden" asp-for="Input.PlayerResults[i].MatchPlayerId" />
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="position-relative">
                                        <img src="@(player.PlayerAvatarUrl ?? "/images/default-avatar.png")" class="player-avatar-circle" />
                                        @if (!string.IsNullOrWhiteSpace(player.MarkerImageDataUrl))
                                        {
                                            <img src="@player.MarkerImageDataUrl" class="marker-overlay shadow-sm" />
                                        }
                                    </div>
                                    <div class="overflow-hidden">
                                        <h5 class="fw-bold mb-0 text-truncate">@player.PlayerName</h5>
                                        <span class="text-primary small fw-semibold">@player.MarkerTypeName</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="row g-2">
                                    <div class="@(Model.ShowTeams ? "col-6" : "col-12")">
                                        <label class="extra-small fw-bold opacity-50 text-uppercase mb-1">Result Type</label>
                                        <select asp-for="Input.PlayerResults[i].ResultTypeId"
                                                class="form-select form-select-sm result-type-select"
                                                data-index="@i"
                                                disabled="@(isLocked ? "disabled" : null)">
                                            @foreach (var rt in Model.ResultTypes)
                                            {
                                                @if (!Model.IsTeamVictoryGame || rt.Name.Contains("Team"))
                                                {
                                                    <option value="@rt.Id"
                                                            data-victory="@rt.IsVictory.ToString().ToLower()"
                                                            data-defeat="@rt.IsDefeat.ToString().ToLower()">
                                                        @rt.Name
                                                    </option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    @if (Model.ShowTeams)
                                    {
                                        <div class="col-6">
                                            <label class="extra-small fw-bold opacity-50 text-uppercase mb-1">Team</label>
                                            <select asp-for="Input.PlayerResults[i].FinalTeam" class="form-select form-select-sm"
                                                    asp-items="Html.GetEnumSelectList<FinalTeam>()"
                                                    disabled="@(isLocked ? "disabled" : null)">
                                                <option value="">None</option>
                                            </select>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-md-2 text-center">
                                @if (Model.ShowPoints)
                                {
                                    <label class="small fw-bold opacity-50 text-uppercase mb-1">Score</label>
                                    <input asp-for="Input.PlayerResults[i].Score" class="form-control score-input bg-transparent border-0 p-0 score-field" data-index="@i" disabled="@(isLocked ? "disabled" : null)" />
                                }
                            </div>

                            <div class="col-md-2 text-end">
                                <input type="checkbox" class="btn-check winner-checkbox" id="win-@i"
                                       asp-for="Input.PlayerResults[i].IsWinner" disabled="@(isLocked || Model.ShowPoints ? "disabled" : null)" />
                                <label class="btn btn-outline-secondary btn-sm winner-btn px-4" for="win-@i">
                                    <i class="bi bi-trophy-fill me-1"></i> Win
                                </label>
                                @if (Model.ShowPoints)
                                {
                                    <input type="hidden" asp-for="Input.PlayerResults[i].IsWinner" class="hidden-winner" data-index="@i" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-5 text-center d-flex flex-column align-items-center gap-3">
            @if (!isLocked)
            {
                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow-lg">Save Draft</button>
                    <button type="submit" asp-page-handler="Complete" class="btn btn-success btn-lg rounded-pill px-5 shadow-lg">
                        <i class="bi bi-check-circle-fill me-2"></i>Complete Match
                    </button>
                </div>
            }
            <div class="mt-2">
                <a asp-page="/GameNight/Details" asp-route-id="@Model.NightId" class="text-secondary text-decoration-none small">
                    <i class="bi bi-arrow-left me-1"></i> Return to Game Night
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const isPointGame = @Model.ShowPoints.ToString().ToLower();

            $('.result-type-select').on('change', function() {
                const $select = $(this);
                const index = $select.data('index');
                const $selectedOption = $select.find('option:selected');
                const isVictory = $selectedOption.data('victory') === true;
                const isDefeat = $selectedOption.data('defeat') === true;
                const $checkbox = $(`#win-${index}`);
                const $hiddenWinner = $(`.hidden-winner[data-index="${index}"]`);
                const $card = $select.closest('.player-card');

                if (isVictory) {
                    $checkbox.prop('checked', true);
                    $hiddenWinner.val('true');
                    $card.removeClass('border-secondary').addClass('border-warning');
                } else if (isDefeat) {
                    $checkbox.prop('checked', false);
                    $hiddenWinner.val('false');
                    $card.removeClass('border-warning').addClass('border-secondary');
                }
            });

            if (isPointGame) {
                $('.score-field').on('input', function() {
                    let maxScore = -Infinity;
                    let winnerIndices = [];
                    $('.score-field').each(function() {
                        const val = parseFloat($(this).val());
                        if (!isNaN(val)) {
                            if (val > maxScore) {
                                maxScore = val;
                                winnerIndices = [$(this).data('index')];
                            } else if (val === maxScore) {
                                winnerIndices.push($(this).data('index'));
                            }
                        }
                    });
                    $('.winner-checkbox').prop('checked', false);
                    $('.hidden-winner').val('false');
                    $('.player-card').removeClass('border-warning').addClass('border-secondary');
                    if (winnerIndices.length > 0 && maxScore !== -Infinity) {
                        winnerIndices.forEach(idx => {
                            $(`#win-${idx}`).prop('checked', true);
                            $(`.hidden-winner[data-index="${idx}"]`).val('true');
                            $(`#win-${idx}`).closest('.player-card').removeClass('border-secondary').addClass('border-warning');
                        });
                    }
                });
            }
        });
    </script>
}
@page
@model Board_Game_Software.Pages.DataSetup.Players.IndexModel
@using Board_Game_Software.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Manage Players";
    var currentUserId = UserManager.GetUserId(User);
    var isAdmin = User.IsInRole("Admin");
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="text-body m-0">Players</h1>
            <p class="text-muted mb-0">Manage the community and game participants.</p>
        </div>
        @if (SignInManager.IsSignedIn(User))
        {
            <a asp-page="Add" class="btn btn-primary shadow-sm">
                <i class="bi bi-person-plus-fill me-1"></i> Add New Player
            </a>
        }
    </div>

    <div class="card shadow-sm border-0 bg-body-tertiary">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Player</th>
                        <th>Date of Birth</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var player in Model.Players)
                    {
                        var isOwner = player.FKdboAspNetUsers == currentUserId;

                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3 bg-primary bg-gradient text-white shadow-sm">
                                        @player.FullName.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <span class="fw-bold text-body-emphasis">@player.FullName</span>
                                        @if (isOwner)
                                        {
                                            <span class="badge bg-info-subtle text-info-emphasis border border-info-subtle ms-2">You</span>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-body-secondary">
                                    <i class="bi bi-calendar3 me-1 small"></i>
                                    @player.DateOfBirth?.ToString("MMM dd, yyyy")
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm">
                                    <a asp-page="Details" asp-route-id="@player.Id" class="btn btn-sm btn-outline-secondary" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    @if (isAdmin || isOwner)
                                    {
                                        <a asp-page="Edit" asp-route-id="@player.Id" class="btn btn-sm btn-outline-primary" title="Edit Player">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    }

                                    @if (isAdmin)
                                    {
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@player.Id" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this player?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" style="border-top-left-radius: 0; border-bottom-left-radius: 0;" title="Delete Player">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 38px;
        height: 38px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(var(--bs-primary-rgb), 0.03);
    }

    .btn-group .btn {
        padding: 0.4rem 0.7rem;
    }
</style>
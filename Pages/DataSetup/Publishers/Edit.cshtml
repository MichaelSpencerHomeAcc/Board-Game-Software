@page "{id:long}"
@model Board_Game_Software.Pages.DataSetup.Publishers.EditModel
@{
    ViewData["Title"] = "Edit Publisher";
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="Index">Publishers</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
        <h2>Edit Publisher: @Model.Publisher.PublisherName</h2>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Publisher.Id" />
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Publisher.PublisherName" class="form-label fw-bold"></label>
                            <input asp-for="Publisher.PublisherName" class="form-control" />
                            <span asp-validation-for="Publisher.PublisherName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Publisher Logo</label>
                            <input asp-for="ImageUpload" type="file" id="imageInput" class="form-control" accept="image/*" />

                            <div id="previewContainer" class="mt-3 @(string.IsNullOrEmpty(Model.ExistingImageBase64) ? "d-none" : "")">
                                <label class="d-block small text-muted mb-2">Current/Preview Logo:</label>
                                <img id="imagePreview"
                                     src="@(Model.ExistingImageBase64 != null ? $"data:{Model.ExistingImageContentType};base64,{Model.ExistingImageBase64}" : "#")"
                                     alt="Logo Preview" class="img-thumbnail" style="max-height: 200px;" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Publisher.Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Publisher.Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Publisher.Description" class="text-danger"></span>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>

                            <a href="@(string.IsNullOrEmpty(Model.ReturnUrl) ? "/DataSetup/Publishers/Index" : Model.ReturnUrl)"
                               class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Handle instant image preview when a new file is picked
        document.getElementById('imageInput').onchange = function (evt) {
            const [file] = this.files;
            if (file) {
                const preview = document.getElementById('imagePreview');
                const container = document.getElementById('previewContainer');
                preview.src = URL.createObjectURL(file);
                container.classList.remove('d-none');
            }
        };
    </script>
}
@page "{id:long}"
@model Board_Game_Software.Pages.Browsing.BoardGames.BoardGameDetailsModel
@{
    ViewData["Title"] = Model.BoardGame?.BoardGameName ?? "Board Game Details";
}
@inject Microsoft.AspNetCore.Identity.UserManager<Microsoft.AspNetCore.Identity.IdentityUser> UserManager
@inject Microsoft.AspNetCore.Identity.SignInManager<Microsoft.AspNetCore.Identity.IdentityUser> SignInManager

@{
    var isAdmin = false;
    if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
        }
    }
}

<div class="container py-4">
    <div class="d-flex flex-wrap align-items-end justify-content-between gap-3 mb-4 border-bottom pb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a asp-page="./Index" class="text-decoration-none">Games</a></li>
                    <li class="breadcrumb-item active text-body-secondary" aria-current="page">Details</li>
                </ol>
            </nav>
            <h1 class="display-5 fw-bold text-body mb-0">
                @Model.BoardGame.BoardGameName
                @if (Model.BoardGame.BoardGameShelfSections?.Any() == true)
                {
                    var shelf = Model.BoardGame.BoardGameShelfSections.First().FkBgdShelfSectionNavigation;
                    <span class="badge bg-primary-subtle text-primary fw-medium fs-6 align-middle ms-2">
                        <i class="bi bi-bookshelf me-1"></i> @shelf.SectionName
                    </span>
                }
            </h1>
        </div>

        <div class="d-flex gap-2">
            @if (isAdmin)
            {
                <a asp-page="/Browsing/BoardGames/Edit" asp-route-id="@Model.BoardGame.Id" class="btn btn-primary shadow-sm">
                    <i class="bi bi-pencil-square me-1"></i> Edit Game
                </a>
            }
            <a asp-page="./Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm bg-body-tertiary sticky-top" style="top: 2rem;">
                <div class="card-body p-3">
                    @if (!string.IsNullOrWhiteSpace(Model.BoardGameFrontImageUrl))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.BoardGameFrontImageUrl" alt="@Model.BoardGame.BoardGameName"
                                 class="img-fluid rounded shadow-sm border border-secondary-subtle"
                                 style="max-height: 350px; width: 100%; object-fit: contain;" />
                        </div>
                    }
                    else
                    {
                        <div class="border border-secondary-subtle rounded d-flex align-items-center justify-content-center bg-body mb-4"
                             style="aspect-ratio: 1/1; color: var(--bs-secondary-color);">
                            <i class="bi bi-image fs-1 opacity-25"></i>
                        </div>
                    }

                    @if (Model.BoardGame.BoardGameMarkers?.Any() == true)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3 px-1">
                            <h6 class="text-uppercase fw-bold text-body-secondary small mb-0">Components</h6>
                            <span class="badge rounded-pill bg-secondary-subtle text-secondary-emphasis">@Model.BoardGame.BoardGameMarkers.Count() Total</span>
                        </div>

                        @* This is the scrollable container *@
                        <div class="marker-scroll-area rounded border bg-body p-2">
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var marker in Model.BoardGame.BoardGameMarkers.OrderBy(m => m.FkBgdBoardGameMarkerTypeNavigation.TypeDesc))
                                {
                                    var markerType = marker.FkBgdBoardGameMarkerTypeNavigation;
                                    var imgSrc = Model.MarkerImagesBase64.ContainsKey(markerType.Id) ? Model.MarkerImagesBase64[markerType.Id] : null;

                                    <span class="badge rounded-pill border text-body fw-normal py-2 px-2 bg-body shadow-sm component-badge flex-grow-1"
                                          style="cursor: help; font-size: 0.75rem;"
                                          onmouseover="showMarkerImage(event, '@imgSrc')"
                                          onmouseout="hideMarkerImage()">
                                        <i class="bi bi-box-seam text-primary me-1"></i>
                                        @markerType.TypeDesc
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="text-center mt-2">
                            <small class="text-muted" style="font-size: 0.7rem;">
                                <i class="bi bi-mouse me-1"></i> Scroll to see all components
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="row g-3 mb-4 text-center">
                <div class="col-6 col-md-3">
                    <div class="p-3 border rounded bg-body shadow-sm h-100">
                        <i class="bi bi-people fs-4 text-primary"></i>
                        <div class="small text-body-secondary mt-1">Players</div>
                        <div class="fw-bold">
                            @Model.BoardGame.PlayerCountMin@(Model.BoardGame.PlayerCountMax != Model.BoardGame.PlayerCountMin ? "–" + Model.BoardGame.PlayerCountMax : "")
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="p-3 border rounded bg-body shadow-sm h-100">
                        <i class="bi bi-clock fs-4 text-primary"></i>
                        <div class="small text-body-secondary mt-1">Duration</div>
                        <div class="fw-bold">
                            @(Model.BoardGame.PlayingTimeMinInMinutes ?? 0)m @(Model.BoardGame.PlayingTimeMaxInMinutes != Model.BoardGame.PlayingTimeMinInMinutes ? "– " + Model.BoardGame.PlayingTimeMaxInMinutes + "m" : "")
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="p-3 border rounded bg-body shadow-sm h-100">
                        <i class="bi bi-diagram-3 fs-4 text-primary"></i>
                        <div class="small text-body-secondary mt-1">Complexity</div>
                        <div class="fw-bold">
                            <span class="text-info">@Model.BoardGame.ComplexityRating?.ToString("0.0")</span><span class="text-body-secondary small">/5</span>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="p-3 border rounded bg-body shadow-sm h-100">
                        <i class="bi bi-calendar3 fs-4 text-primary"></i>
                        <div class="small text-body-secondary mt-1">Released</div>
                        <div class="fw-bold">@(Model.BoardGame.ReleaseDate?.Year.ToString() ?? "-")</div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">About this Game</h5>
                    <p class="text-body-secondary lh-lg mb-0" style="white-space: pre-line;">
                        @(!string.IsNullOrWhiteSpace(Model.BoardGame.BoardGameSummary) ? Model.BoardGame.BoardGameSummary : "No summary available for this title.")
                    </p>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4">
                            <h6 class="text-uppercase fw-bold text-body-secondary small mb-3">Game Info</h6>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2 d-flex justify-content-between">
                                    <span class="text-body-secondary">Type</span>
                                    <span class="fw-medium">@(Model.BoardGame.FkBgdBoardGameTypeNavigation?.TypeDesc ?? "-")</span>
                                </li>
                                <li class="mb-2 d-flex justify-content-between">
                                    <span class="text-body-secondary">Publisher</span>
                                    <span class="fw-medium">@(Model.BoardGame.FkBgdPublisherNavigation?.PublisherName ?? "-")</span>
                                </li>
                                <li class="mb-0 d-flex justify-content-between">
                                    <span class="text-body-secondary">Victory Condition</span>
                                    <span class="fw-medium">@(Model.BoardGame.FkBgdBoardGameVictoryConditionTypeNavigation?.TypeDesc ?? "-")</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body p-4">
                            <h6 class="text-uppercase fw-bold text-body-secondary small mb-3">Physical Specs</h6>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2 d-flex justify-content-between">
                                    <span class="text-body-secondary">Box Height</span>
                                    <span class="fw-medium">@(Model.BoardGame.HeightCm?.ToString("0.##") ?? "-") cm</span>
                                </li>
                                <li class="mb-2 d-flex justify-content-between">
                                    <span class="text-body-secondary">Box Width</span>
                                    <span class="fw-medium">@(Model.BoardGame.WidthCm?.ToString("0.##") ?? "-") cm</span>
                                </li>
                                @if (!string.IsNullOrWhiteSpace(Model.BoardGame.HowToPlayHyperlink) && Model.BoardGame.HowToPlayHyperlink.ToLower() != "null")
                                {
                                    <li class="mt-3">
                                        <a href="@Model.BoardGame.HowToPlayHyperlink" target="_blank" class="btn btn-sm btn-outline-primary w-100">
                                            <i class="bi bi-play-btn me-2"></i>How to Play
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="markerImagePreview" class="shadow-lg border border-secondary-subtle bg-body p-1 rounded" style="position:absolute; display:none; z-index:2000;">
    <img id="markerImage" style="max-width:250px; max-height:250px; object-fit: contain;" />
</div>

<style>
    /* Fixed height container for markers */
    .marker-scroll-area {
        max-height: 280px; /* Adjust this to control how much space markers take */
        overflow-y: auto;
        overflow-x: hidden;
        /* Custom scrollbar for a cleaner look */
        scrollbar-width: thin;
        scrollbar-color: var(--bs-secondary-bg) transparent;
    }

        .marker-scroll-area::-webkit-scrollbar {
            width: 6px;
        }

        .marker-scroll-area::-webkit-scrollbar-track {
            background: transparent;
        }

        .marker-scroll-area::-webkit-scrollbar-thumb {
            background-color: var(--bs-secondary-bg);
            border-radius: 10px;
        }

    .component-badge {
        transition: transform 0.1s, border-color 0.2s;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: fit-content;
    }

        .component-badge:hover {
            border-color: var(--bs-primary) !important;
            background-color: var(--bs-primary-gutter-stack) !important;
        }
</style>

<script>
    function showMarkerImage(e, imgSrc) {
        const preview = document.getElementById('markerImagePreview');
        const img = document.getElementById('markerImage');

        if (imgSrc && imgSrc !== 'null' && imgSrc !== '') {
            img.src = imgSrc;
            preview.style.display = 'block';
            updateTooltipPos(e);
        }
    }

    function updateTooltipPos(e) {
        const preview = document.getElementById('markerImagePreview');
        preview.style.top = (e.pageY + 15) + 'px';
        preview.style.left = (e.pageX + 15) + 'px';
    }

    function hideMarkerImage() {
        const preview = document.getElementById('markerImagePreview');
        preview.style.display = 'none';
        document.getElementById('markerImage').src = '';
    }

    document.addEventListener('mousemove', (e) => {
        const preview = document.getElementById('markerImagePreview');
        if (preview.style.display === 'block') {
            updateTooltipPos(e);
        }
    });
</script>